{% extends '::base.html.twig' %}

  {% block stylesheets %}
      {{ parent() }}
      {% stylesheets
      'slider/css/*'

      filter='cssrewrite' output='css/compiled/app.css' %}
      <link rel="stylesheet" href="{{ asset_url }}"/>
      {% endstylesheets %}
  {% endblock %}


  {% block header %}
      <ul class="bxslider">
          <li><img src="{{ asset('slider/img/photo1.jpg') }}"/></li>
          <li><img src="{{ asset('slider/img/photo2.jpg') }}"/></li>
          <li><img src="{{ asset('slider/img/photo3.jpg') }}"/></li>
      </ul>
  {% endblock %}

{% block content %}

    <h2>Bienvenue sur le site de la famille</h2>
    <p>Vous pourrez partager des photos, des news et gérer le calendrier de présence de carnac.</p>
{% endblock %}



{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'slider/js/*'


    output='js/compiled/app.js' %}
    <script src="{{ asset_url }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    {% endjavascripts %}

{% endblock %}